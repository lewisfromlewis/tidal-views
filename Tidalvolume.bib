@article{writing_group_for_the_prevent_investigators_effect_2018,
  title = {Effect of a {{Low}} vs {{Intermediate Tidal Volume Strategy}} on {{Ventilator}}-{{Free Days}} in {{Intensive Care Unit Patients Without ARDS}}: {{A Randomized Clinical Trial}}},
  shorttitle = {Effect of a {{Low}} vs {{Intermediate Tidal Volume Strategy}} on {{Ventilator}}-{{Free Days}} in {{Intensive Care Unit Patients Without ARDS}}},
