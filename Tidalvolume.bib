@article{papazian_formal_2019,
  title = {Formal Guidelines: Management of Acute Respiratory Distress Syndrome},
  shorttitle = {Formal Guidelines},
  author = {Papazian, Laurent and Aubron, C{\'e}cile and Brochard, Laurent and Chiche, Jean-Daniel and Combes, Alain and Dreyfuss, Didier and Forel, Jean-Marie and Gu{\'e}rin, Claude and Jaber, Samir and {Mekontso-Dessap}, Armand and Mercat, Alain and Richard, Jean-Christophe and Roux, Damien and {Vieillard-Baron}, Antoine and Faure, Henri},
