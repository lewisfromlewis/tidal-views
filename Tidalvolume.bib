@article{burns_pressure_2011,
  title = {Pressure and {{Volume Limited Ventilation}} for the {{Ventilatory Management}} of {{Patients}} with {{Acute Lung Injury}}: {{A Systematic Review}} and {{Meta}}-{{Analysis}}},
